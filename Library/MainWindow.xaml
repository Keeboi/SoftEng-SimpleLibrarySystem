<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Sto. Rosario Library Management System" Height="600" Width="1024" WindowStartupLocation="CenterScreen" MinHeight="600" MinWidth="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Button x:Name="buttonBooks" Content="Books" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Light" Height="50" Width="100" Click="buttonBooks_Click"/>
        <Button x:Name="buttonBorrow" Content="Borrow" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Light" Height="50" Width="100" Click="buttonBorrow_Click"/>
        <Button x:Name="buttonReturn" Content="Return" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Light" Height="50" Width="100" Click="buttonReturn_Click"/>
        <Button x:Name="buttonLogout" Content="Logout" Margin="10,0,0,10" FontSize="16" FontWeight="Light" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100" Click="buttonLogout_Click"/>
        <Button x:Name="buttonStudents" Content="Students" HorizontalAlignment="Left" Margin="10,175,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Light" Height="50" Width="100" Click="buttonStudents_Click"/>
        <Button x:Name="buttonAccounts" Content="Accounts" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Light" Height="50" Width="100" Click="buttonAccounts_Click"/>
        
        <StackPanel x:Name="stackPanel" Grid.Column="1" Margin="10,10,0,0"/>
    </Grid>
</Window>
