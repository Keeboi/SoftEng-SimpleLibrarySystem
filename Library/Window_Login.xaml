<Window x:Class="Library.Window_Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Window_Login" Height="140" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="294"/>
        </Grid.ColumnDefinitions>
        <Label Content="Username" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="26" Width="63"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="13,41,0,0" VerticalAlignment="Top" Height="26" Width="60"/>
        <TextBox x:Name="textUsername" HorizontalAlignment="Left" Height="26" Margin="78,10,0,0" TextWrapping="Wrap" Text="admin" VerticalAlignment="Top" Width="194" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <PasswordBox x:Name="textPassword" HorizontalAlignment="Left" Margin="78,41,0,0" VerticalAlignment="Top" Width="194" Height="26" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Password="admin"/>
        <Button x:Name="buttonLogin" Content="Login" HorizontalAlignment="Left" Margin="179,72,0,0" VerticalAlignment="Top" Width="93" Click="buttonLogin_Click"/>
        <Button x:Name="buttonClear" Content="Clear" HorizontalAlignment="Left" Margin="78,72,0,0" VerticalAlignment="Top" Width="96"/>

    </Grid>
</Window>
