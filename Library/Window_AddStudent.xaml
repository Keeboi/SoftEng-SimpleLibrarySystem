<Window x:Class="Library.Window_AddStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Add Student" Height="233.203" Width="280" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="88*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Student ID" HorizontalAlignment="Left" Margin="26,7,0,0" VerticalAlignment="Top" Height="26" Width="66"/>
        <Label Content="Grade Section" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,102,0,0" Height="26" Width="88"/>
        <Label Content="Last Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,69,0,0" Height="26" Width="66"/>
        <Label Content="First Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,38,0,0" Height="26" Width="67"/>
        <TextBox x:Name="textLastName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" Margin="4,73,0,0" Grid.Column="1"/>
        <TextBox x:Name="textFirstName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" Margin="4,42,0,0" Grid.Column="1"/>
        <TextBox x:Name="textStudentID" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" Margin="4,10,0,0" Grid.Column="1"/>
        <ComboBox x:Name="comboSection" HorizontalAlignment="Left" Margin="4,106,0,0" VerticalAlignment="Top" Width="155" Grid.Column="1" Height="22"/>
        <Button x:Name="buttonClear" Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Top" Width="155" Margin="4,158,0,0" Grid.Column="1" Height="20"/>
        <Button x:Name="buttonAdd" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="155" Margin="4,133,0,0" Click="buttonAdd_Click" Grid.Column="1" Height="20"/>

    </Grid>
</Window>
