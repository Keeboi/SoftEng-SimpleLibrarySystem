<Window x:Class="Library.Window_AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Add Book" Height="460" Width="260" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>
        <Label Content="Title" HorizontalAlignment="Left" Margin="45,10,0,0" VerticalAlignment="Top" Height="26" Width="32"/>
        <TextBox x:Name="textTitle" HorizontalAlignment="Left" Height="26" Margin="82,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center"/>
        <Label Content="Book ID" HorizontalAlignment="Left" Margin="25,41,0,0" VerticalAlignment="Top" Height="26" Width="52"/>
        <TextBox x:Name="textBookID" HorizontalAlignment="Left" Height="26" Margin="82,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center"/>
        <Label Content="Author" HorizontalAlignment="Left" Margin="30,72,0,0" VerticalAlignment="Top" Height="26" Width="47"/>
        <Label Content="Year" HorizontalAlignment="Left" Margin="45,103,0,0" VerticalAlignment="Top" Height="26" Width="32"/>
        <TextBox x:Name="textYear" HorizontalAlignment="Left" Height="26" Margin="82,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center"/>
        <Label Content="Quantity" HorizontalAlignment="Left" Margin="21,134,0,0" VerticalAlignment="Top" Height="26" Width="56"/>
        <TextBox x:Name="textQuantity" HorizontalAlignment="Left" Height="26" Margin="82,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center"/>
        <Label Content="Pages" HorizontalAlignment="Left" Margin="36,165,0,0" VerticalAlignment="Top" Height="26" Width="41"/>
        <TextBox x:Name="textPages" HorizontalAlignment="Left" Height="26" Margin="82,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" VerticalContentAlignment="Center"/>
        <ComboBox x:Name="comboAuthor" HorizontalAlignment="Left" Margin="82,72,0,0" VerticalAlignment="Top" Width="150" Height="26" IsEditable="True" VerticalContentAlignment="Center"/>
        <Label Content="Category" HorizontalAlignment="Left" Margin="19,196,0,0" VerticalAlignment="Top" Height="26" Width="58"/>
        <ComboBox x:Name="comboCategory" HorizontalAlignment="Left" Margin="82,196,0,0" VerticalAlignment="Top" Width="150" Height="26" IsEditable="True" VerticalContentAlignment="Center"/>
        <Label Content="Section" HorizontalAlignment="Left" Margin="28,227,0,0" VerticalAlignment="Top" Height="26" Width="49"/>
        <ComboBox x:Name="comboSection" HorizontalAlignment="Left" Margin="82,227,0,0" VerticalAlignment="Top" Width="150" Height="26" IsEditable="True" VerticalContentAlignment="Center"/>
        <Label Content="Comments" HorizontalAlignment="Left" Margin="10,258,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.373,0.423" Height="26" Width="67"/>
        <TextBox x:Name="textComments" HorizontalAlignment="Left" Height="100" Margin="82,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="buttonAdd" Content="Add" HorizontalAlignment="Left" Margin="82,363,0,0" VerticalAlignment="Top" Width="150" Height="20" Click="buttonAdd_Click"/>
        <Button x:Name="buttonClear" Content="Clear" HorizontalAlignment="Left" Margin="82,388,0,0" VerticalAlignment="Top" Width="150" Height="20"/>

    </Grid>
</Window>
