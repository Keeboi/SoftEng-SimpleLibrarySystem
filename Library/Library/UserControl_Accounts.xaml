<UserControl x:Class="Library.UserControl_Accounts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="875" Background="White" MinHeight="550" MinWidth="875">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="264"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="ID Number" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top" Height="26" Width="69" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="textStudentID" HorizontalAlignment="Left" Height="26" Margin="97,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" VerticalContentAlignment="Center"/>
        <Label Content="First Name" HorizontalAlignment="Left" Margin="25,41,0,0" VerticalAlignment="Top" Height="26" Width="67" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="textFirstName" HorizontalAlignment="Left" Height="26" Margin="97,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" VerticalContentAlignment="Center"/>
        <Label Content="Last Name" HorizontalAlignment="Left" Margin="26,72,0,0" VerticalAlignment="Top" Height="26" Width="66" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="textLastName" HorizontalAlignment="Left" Height="26" Margin="97,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" VerticalContentAlignment="Center"/>
        <Label Content="Middle Name" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Height="26" Width="82" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="textMiddleName" HorizontalAlignment="Left" Height="26" Margin="97,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" VerticalContentAlignment="Center"/>
        <Label Content="E-mail" HorizontalAlignment="Left" Margin="49,134,0,0" VerticalAlignment="Top" Height="26" Width="43" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="textemail" HorizontalAlignment="Left" Height="26" Margin="97,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" VerticalContentAlignment="Center"/>
        <Label Content="Profession" HorizontalAlignment="Left" Margin="27,165,0,0" VerticalAlignment="Top" Height="26" Width="65" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ComboBox x:Name="comboProfession" HorizontalAlignment="Left" Margin="97,165,0,0" VerticalAlignment="Top" Width="155" Height="26"/>
        <Button Content="Search / Add" HorizontalAlignment="Left" Margin="97,196,0,0" VerticalAlignment="Top" Width="155" Height="20" Click="Button_Click"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="97,221,0,0" VerticalAlignment="Top" Width="155" Height="20"/>
        <DataGrid x:Name="DataGrid" Margin="10" Grid.Column="1"/>

    </Grid>
</UserControl>
